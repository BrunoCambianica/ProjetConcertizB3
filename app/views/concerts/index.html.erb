<h1> Concerts </h1>
<ul>
  <% @concerts.each do |concert| %>
    <li>
		<p><%= concert.inspect %></p>
		<p><%= "Nom du concert : #{concert.name}" %></p>
<!-- Code affreux pour afficher le genre -->		
		<% @genres.each do |genre| %>
			<% 	if genre.id == concert.genre_id %>
			<p><%= 	"Genre du concert :	#{genre.nom}" %></p>
			<% end %>
		<% end %>
  
		<%= link_to "Show", concert_path(concert) %> <br/> 
		<%= link_to "Edit", edit_concert_path(concert) %><br/>
		<%= link_to "Destroy", concert_path(concert),
			method: :delete,
			data: {confirm: "Etes vous sûr ?"} %>
			
	</li>
  <% end %>
</ul>

